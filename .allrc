# -*- mode: shell-script -*-
# Environment
#

export PATH="/home/hartmann/bin:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games"
# export MANPATH="/usr/local/man:$MANPATH"

export EDITOR="~/bin/emacs-nw"
export SUDO_EDITOR=/usr/bin/editor

#
# General
#
alias ls="ls --color=tty --group-directories-first"
alias l='ls -lrtGF'

# -a "" runs emacs --daemon and tries to connect
alias emacs='emacsclient --create-frame -a ""'
alias e='/usr/bin/emacs -nw -q'

alias magit='emacs $(pwd) --eval "(magit-status)"'

alias open="xdg-open"

alias println='printf "%s\n"'
bashman () { man bash | less -p "^[[:space:]]*$1 "; }

# sudo edit
function se() {
    FILE=$1
    [[ $# -ne 1 || ! -e $FILE ]] && {
        echo "Usage: $0 <filename>"
        return 1 # FAIL
    }
    TMP_FILE=$(mktemp)
    cp "$FILE" "$TMP_FILE"
    sudoedit "$FILE"
    printf "Diff:\n"
    diff "$FILE" "$TMP_FILE"
    return 0
}
alias se-hosts='se /etc/hosts'

alias hibernate="pm-hibernate"

alias sh-reload='source ~/.allrc'

if [[ -d ~/.shell_functions ]]
then
    for file in ~/.shell_functions/*.sh
    do
        source "$file"
    done
fi
