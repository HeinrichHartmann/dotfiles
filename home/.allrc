alias x=emacs -F "'(fullscreen . fullboth)" -e "(find-file \"~/\")"

alias open="xdg-open"

# sudo edit
function se() {
    FILE=$1
    [[ $# -ne 1 || ! -e $FILE ]] && {
        echo "Usage: $0 <filename>"
        return 1 # FAIL
    }
    TMP_FILE=$(mktemp)
    cp "$FILE" "$TMP_FILE"
    sudoedit "$FILE"
    printf "Diff:\n"
    diff "$FILE" "$TMP_FILE"
    return 0
}
alias se-hosts='se /etc/hosts'

function sh-reload() { source ~/.allrc }

# Password generator
password-gen() {
	local l=${1:-10}
    [ "$l" == "" ] && l=16
    tr -dc A-Za-z0-9_ < /dev/urandom | head -c ${l} | xargs
}


